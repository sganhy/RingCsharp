		</relation_list>
		<index_list>
			<index name="name" unique="false" baseline="true">
				<index_field name="name"/>
			</index>
			<index name="short_name" unique="false" baseline="true">
				<index_field name="short_name"/>
			</index>
			<index name="base" unique="false" baseline="true">
				<index_field name="base"/>
			</index>
			<index name="prestige" unique="false" baseline="true">
				<index_field name="prestige"/>
			</index>
		</index_list>
	</table>


