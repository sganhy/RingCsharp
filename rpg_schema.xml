<schema version="1.0" name="RpgSheet" default_port="9302" default_language="en-US">

	<!-- ******************************* -->
	<!-- *** T A B L E   S P A C E S *** -->
	<!-- ******************************* -->

	<tablespace_list> 
		<tablespace name="rpg_data" table="true" file="c:\temp\rpg\data"/>
