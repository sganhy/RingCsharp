	</tablespace_list> 
	
	<!-- ******************* -->
	<!-- *** T A B L E S *** -->
	<!-- ******************* -->
	
	
	<table name="ability" id="1011" baseline="true" readonly="true">
		<description></description>
		<field_list>
			<field name="id" type="short" />
			<field name="name" type="string" size="80" case_sensitive="false" not_null="true" baseline="true" multilingual="true" />
			<field name="short_name" type="string" size="5" case_sensitive="false" not_null="true" baseline="true" multilingual="true" />
		</field_list>
		<relation_list>
			<relation name="ability2skill" type="OTM" to="skill" inverse_relation="skill2ability" />
			<relation name="ability2book" type="MTM" to="book" inverse_relation="book2ability" />
		</relation_list>
		<index_list>
			<index name="name" unique="true" baseline="true">
				<index_field name="name"/>
			</index>
			<index name="short_name" unique="true" baseline="true">
				<index_field name="short_name"/>
			</index>
		</index_list>
	</table>
	

	<table name="alignment" id="1012" baseline="true" readonly="true">
		<description></description>
		<field_list>
			<field name="id" type="short" />
			<field name="name" type="string" size="40" case_sensitive="false" not_null="true" baseline="true" multilingual="true" />
			<field name="alt_name" type="string" size="40" not_null="true" baseline="true" multilingual="true" />
			<field name="short_name" type="string" size="5" case_sensitive="false" not_null="true" baseline="true" multilingual="true" />
			<field name="law" type="boolean" not_null="true"  />
			<field name="chaos" type="boolean" not_null="true"  />
			<field name="good" type="boolean" not_null="true"  />
			<field name="evil" type="boolean" not_null="true"  />
		</field_list>
		<relation_list>
			<relation name="alignment2book" type="MTM" to="book" inverse_relation="book2alignment" />
			<relation name="align2alignment_descriptor" type="MTM" to="alignment_descriptor" inverse_relation="align_descriptor2alignment" />
			<relation name="alignment2deity" type="OTM" to="deity" constraint="true" inverse_relation="deity2alignment" />
		</relation_list>
		<index_list>
			<index name="name" unique="true" baseline="true">
				<index_field name="name"/>
			</index>
			<index name="short_name" unique="true" baseline="true">
				<index_field name="short_name"/>
			</index>
		</index_list>
	</table>
	
	
	<table name="alignment_descriptor" id="1013" baseline="true" readonly="true">
		<description></description>
		<field_list>
			<field name="id" type="short" />
			<field name="name" type="string" size="40" case_sensitive="false" not_null="true" baseline="true" multilingual="true" />
		</field_list>
		<relation_list>
			<relation name="align_descriptor2alignment" type="MTM" to="alignment" inverse_relation="align2alignment_descriptor" />
		</relation_list>
		<index_list>
			<index name="name" unique="true" baseline="true">
				<index_field name="name"/>
			</index>
		</index_list>
	</table>
	
	
	<table name="armor" id="1015" baseline="true" readonly="true">
		<description></description>
		<field_list>
			<field name="id" type="short" />
			<field name="name" type="string" size="80" case_sensitive="false" not_null="true" baseline="true" multilingual="true" />
			<field name="shield" type="boolean" not_null="true"  />
			<field name="exotic" type="boolean" not_null="true"  />
			<field name="light" type="boolean" not_null="true"  />
			<field name="medium" type="boolean" not_null="true"  />
			<field name="heavy" type="boolean" not_null="true"  />
			<field name="extra" type="boolean" not_null="true"  />
			<field name="ac_bonus" type="byte" />
			<field name="fortitude_bonus" type="byte" />
			<field name="check_penality" type="byte" />
			<field name="arcane_spell_failure" type="byte" />
			<field name="max_dex_bonus" type="short" />
			<field name="speed" type="byte" />
			<field name="weight" type="int" />
			<field name="cost" type="int" />
		</field_list>
		<relation_list>
			<relation name="armor2book" type="MTO" not_null="true" to="book" inverse_relation="book2armor" />
		</relation_list>
		<index_list>
			<index name="name" unique="true" baseline="true">
				<index_field name="name"/>
				<index_field name="armor2book"/>
			</index>
		</index_list>
	</table>
	
	
	<table name="book" id="1021" baseline="true" readonly="true">
		<description>Role playing description</description>
		<field_list>
			<field name="id" type="int" />
			<field name="title" type="string" size="80" case_sensitive="false" not_null="true" baseline="true" multilingual="true" />
			<field name="sub_title" type="string" size="80" case_sensitive="false" baseline="true" multilingual="true" />
			<field name="short_name" type="string" size="80" case_sensitive="false" baseline="true"  />
			<field name="core_rule" type="boolean" not_null="true"  />
			<field name="isbn" type="string" size="13" not_null="true" baseline="true" multilingual="true">
			 	<description>International Standard Book Number (ISBN) - 13 digits long</description>
			</field>
			<field name="creation_time" type="shortDatetime" not_null="true"  />
			<field name="update_stamp" type="shortDatetime" not_null="true"   />
			<field name="publish_date" type="shortDatetime" not_null="true"   />
			<field name="language" type="string" size="2" not_null="true" case_sensitive="false" multilingual="true" />	
			<field name="pages" type="short" multilingual="true" />
		</field_list>
		<relation_list>
			<relation name="book2skill" type="MTM" to="skill" inverse_relation="skill2book" />
			<relation name="book2ability" type="MTM" to="ability" inverse_relation="ability2book" />
			<relation name="book2alignment" type="MTM" to="alignment" inverse_relation="alignment2book" />
			<relation name="book2race" type="OTM" to="race" inverse_relation="race2book" />
			<relation name="book2weapon" type="OTM" to="weapon" inverse_relation="weapon2book" />
			<relation name="book2armor" type="OTM" to="armor" inverse_relation="armor2book" />
			<relation name="book2feat" type="MTM" to="feat" inverse_relation="feat2book" />
			<relation name="book2rule" type="MTO" to="rule" inverse_relation="rule2book" />
			<relation name="book2class" type="MTM" to="class" constraint="true" inverse_relation="class2book" />
			<relation name="book2domain" type="MTM" to="domain" constraint="true" inverse_relation="domain2book" />
		</relation_list>
		<index_list>
			<index name="isbn" unique="true" baseline="true">
				<index_field name="isbn"/>
			</index>
			<index name="title" unique="false" baseline="true">
				<index_field name="title"/>
			</index>
		</index_list>
	</table>
	
	
